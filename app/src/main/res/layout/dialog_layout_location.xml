<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Spinner
        android:id="@+id/spinnerProvince"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerDistrict"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:layout_below="@+id/spinnerProvince"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerProvince" />

    <Spinner
        android:id="@+id/spinnerCommune"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:layout_below="@+id/spinnerDistrict"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDistrict" />

    <EditText
        android:id="@+id/registerAddress"
        style="@style/style_edit_text"
        android:layout_below="@+id/spinnerCommune"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/ic_location"
        android:hint="@string/input_street_name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCommune" />

</androidx.constraintlayout.widget.ConstraintLayout>